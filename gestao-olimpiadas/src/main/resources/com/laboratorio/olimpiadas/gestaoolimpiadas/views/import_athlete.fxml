<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<SplitPane fx:id="splitpane" dividerPositions="0.6" prefHeight="600.0" prefWidth="800.0"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <TableView fx:id="tableViewImportAtletas" prefHeight="550.0" style="-fx-background-color: #ECECEC;"
               stylesheets="@tableview.css" SplitPane.resizableWithParent="false" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNome" text="Name"/>
            <TableColumn fx:id="colPais" text="Country"/>
            <TableColumn fx:id="colDataNascimento" text="Date of Birth"/>
            <TableColumn fx:id="colGenero" text="Gender"/>
            <TableColumn fx:id="colAltura" text="Height"/>
            <TableColumn fx:id="colPeso" text="Weight"/>
        </columns>
        <padding>
            <Insets bottom="10.0" left="10.0" top="10.0"/>
        </padding>
    </TableView>

    <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #ECECEC;" VBox.vgrow="ALWAYS">
        <TableView fx:id="tableViewParticipacoes" style="-fx-background-color: #ECECEC;" stylesheets="@tableview.css"
                   VBox.vgrow="ALWAYS" maxHeight="340.0">
            <columns>
                <TableColumn fx:id="colAno" text="Year"/>
                <TableColumn fx:id="colOuro" text="Gold"/>
                <TableColumn fx:id="colPrata" text="Silver"/>
                <TableColumn fx:id="colBronze" text="Bronze"/>
            </columns>
            <VBox.margin>
                <Insets left="10.0" right="10.0"/>
            </VBox.margin>
        </TableView>

        <Button fx:id="btnAddParticipacao"
                style="-fx-background-color: #808080; -fx-font-weight: bold; -fx-font-size: 15px;" text="Import"
                textFill="WHITE">
        </Button>
    </VBox>
</SplitPane>
